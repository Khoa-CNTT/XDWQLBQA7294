@model IEnumerable<EShopp.Models.EF.Product>
@if (Model != null && Model.Any())
{
    <div class="product-container row">
        <!-- Thêm class row từ Bootstrap -->
        @foreach (var item in Model)
        {
            var strImage = item.Image;

            <div class="product-item @item.ProductCategory?.Alias col-lg-3 col-md-4 col-sm-6">
                <div class="product discount product_filter">
                    <div class="product_image">
                        <img src="@strImage" alt="@item.Title" class="img-fluid">
                    </div>
                    <div class="favorite favorite_left"></div>
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                        <span>-$20</span>
                    </div>
                    <div class="product_info">
                        <h6 class="product_name">
                            <a href="@(item.Alias ?? "#")">@item.Title</a>
                        </h6>
                        @if (item.PriceSale != null && item.PriceSale > 0)
                        {
                            <div class="product_price">@item.PriceSale?.ToString("N0") VNĐ</div>
                        }
                        else
                        {
                            <div class="product_price">@item.Price?.ToString("N0") VNĐ</div>
                        }
                    </div>
                </div>
                <div class="red_button add_to_cart_button">
                    <a href="#">add to cart</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Không có sản phẩm nào.</p>
}