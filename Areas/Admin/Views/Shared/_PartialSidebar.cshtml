            {
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;" onsubmit="console.log('Form submitted to /Account/Logout');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link btn btn-link">
                            <i class="far fa-circle nav-icon"></i>
                            <p>Đăng xuất</p>
                        </button>
                    </form>
                </li>
            }
        </ul>
    </nav>
